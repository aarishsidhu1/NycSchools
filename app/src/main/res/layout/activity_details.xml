<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsActivity">
    <TextView
        android:id="@+id/tv_school_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/tv_test_takers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_school_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Test Takers"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_school_name"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text=":"/>
    <TextView
        android:id="@+id/tv_test_takers_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_school_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:text=""
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/tv_math_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_test_takers_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Math Avg Score"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_test_takers_label"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text=":"/>
    <TextView
        android:id="@+id/tv_math_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_test_takers_label"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:text=""
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/tv_reading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_math_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Reading Avg Score"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_math_label"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text=":"/>
    <TextView
        android:id="@+id/tv_reading_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_math_label"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:text=""
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/tv_writing_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_reading_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Writing Avg Score"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_reading_label"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text=":"/>
    <TextView
        android:id="@+id/tv_writing_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_reading_label"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:text=""
        android:layout_marginLeft="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>